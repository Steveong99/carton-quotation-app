def calc_pizza_box_dimensions(length_mm, width_mm):
    """
    Calculates the paper dimensions for a pizza box based on 2D surface.
    Adds 20mm to both length and width as fixed allowance.
    Height is not used.

    Parameters:
        length_mm (float): The pizza box length in mm.
        width_mm (float): The pizza box width in mm.

    Returns:
        tuple: (paper_length_mm, paper_width_mm)
    """
    paper_length_mm = length_mm + 20
    paper_width_mm = width_mm + 20
    return paper_length_mm, paper_width_mm


def calculate_pizza_box_area_m2(paper_length_mm, paper_width_mm):
    """
    Calculates the paper area in square meters from paper size in mm.

    Parameters:
        paper_length_mm (float): Paper length in mm.
        paper_width_mm (float): Paper width in mm.

    Returns:
        float: Area in square meters.
    """
    paper_area_m2 = (paper_length_mm / 1000) * (paper_width_mm / 1000)
    return paper_area_m2


def calculate_pizza_box_cost(length_mm, width_mm, price_per_m2):
    """
    Calculates the total cost for one pizza box based on 2D area.

    Parameters:
        length_mm (float): Pizza box length in mm.
        width_mm (float): Pizza box width in mm.
        price_per_m2 (float): Paper price per square meter (RM/m¬≤).

    Returns:
        dict: Contains paper size, area, and unit cost.
    """
    paper_L, paper_W = calc_pizza_box_dimensions(length_mm, width_mm)
    area_m2 = calculate_pizza_box_area_m2(paper_L, paper_W)
    unit_cost_rm = area_m2 * price_per_m2

    return {
        "paper_length_mm": paper_L,
        "paper_width_mm": paper_W,
        "area_m2": area_m2,
        "unit_cost_rm": unit_cost_rm
    }


# üîÅ Example usage
if __name__ == "__main__":
    box_length = 300  # mm
    box_width = 250   # mm
    price_per_m2 = 2.50  # RM per square meter

    result = calculate_pizza_box_cost(box_length, box_width, price_per_m2)

    print("üì¶ Pizza Box Paper Calculation")
    print(f"Paper Size : {result['paper_length_mm']}mm x {result['paper_width_mm']}mm")
    print(f"Area       : {result['area_m2']:.4f} m¬≤")
    print(f"Unit Cost  : RM {result['unit_cost_rm']:.4f}")
